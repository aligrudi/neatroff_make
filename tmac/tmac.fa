.\" A package for short Farsi manuscripts
.\" Registers and their default values
.nr PS 14		\" point size
.nr VS \n(PS+12		\" vertical spacing
.nr LL 6i		\" line length
.nr PO 1.1i		\" page offset
.nr FP -1.2i		\" footer position
.\" Internal registers
.nr fa.in 0		\" current indentation
.nr fa.ip 2m		\" IP indentation
.nr fa.pi 2m		\" RS indentation
.nr fa.pg 1		\" page numbering (0 disables)
.ds fa.cl "0		\" header colour
.\" Reset variables; when beginning a paragraph, e.g.
.de RT
.	fi
.	<<
.	ft FR
.	ad pk
.	ps \\n(PS
.	vs \\n(VS
.	ll \\n(LLu
.	lt \\n(LLu
.	po \\n(POu
.	in 0
.	in2 \\n[fa.in]u
.	cl 0
.	AL
..
.\" Alignment
.de AL
.	if \\n(.d%\\n(.v 'sp \\n(.vu-(\\n(.du%\\n(.vu)
..
.\" Paragraphs
.de LP		\" Paragraphs without temporary indentation
.	RT
..
.de PP		\" Ordinary paragraphs
.	RT
.	ti2 +3n
..
.de QP		\" Quoted paragraphs
.	LP
.	in2 \\n[fa.in]u+0.5i
.	ll -2m
..
.de IP		\" Indented paragraphs
.	br
.	RT
.	ne 1
.	<<
.	if \\n(.$>1 .nr fa.ip \\$2
.	in2 +\\n[fa.ip]u
\h'|-\\n[fa.ip]u'\\$1
.	sp -1
..
.de IP.en	\" Indented paragraphs (English)
.	br
.	ne 1
.	ft R
.	>>
.	if \\n(.$>1 .nr fa.ip \\$2
.	in +\\n[fa.ip]u
\h'|-\\n[fa.ip]u'\\$1
.	sp -1
..
.de RS		\" Indented block start
.	br
.	if \\n(.$ .nr fa.pi \\$1
.	nr fa.in +\\n[fa.pi]
..
.de RE		\" Indented block end
.	br
.	if \\n(.$ .nr fa.pi \\$1
.	nr fa.in -\\n[fa.pi]
..
.de QS		\" Quote start
.	br
.	RS
.	LP
..
.de QE		\" Quote end
.	br
.	RE
..
.\" Section header
.de SH
.	RT
.	sp
.	ne 1.5
.	cl \\*[fa.cl]
.	ft HD
.	ps \\n(PS+2
.	ad r
.	if \\n(.$ \{\
\\$1
.		LP
.	\}
..
.\" Document title
.de TL
.	RT
.	cl \\*[fa.cl]
.	ft HD
.	sp 2
.	ad c
.	ps \\n(PS+4
.	vs \\n(VS+6
.	fi
.	if \\n(.$ \{\
\\$1
.		sp 2
.		LP
.	\}
..
.\" Preprocessor macros
.de EQ
.	RT
.	nf
.	>>
.	ft R
.	ds fa.eqlab "\\$1
.	di fa.eqdiv
..
.de EN
.	di
.	if \\n(dn \{\
.		sp .5
.		ad c
.		ie "\\*[fa.eqlab]"" .fa.eqdiv
.		el \{\
.			nr fa.eqwid \\n(dl
.			if \\n[fa.eqwid]<(\\n(.lu/2u) .nr fa.eqwid \\n(.lu/2u
.			ll \\n[fa.eqwid]u
.			ad r
.			fa.eqdiv
.			sp -1
.			ll
.			in +(\\n[fa.eqwid]u+2m)
.			ad l
\\*[fa.eqlab]
.			in
.		\}
.		sp .5
.	\}
.	fi
.	<<
.	ft FR
..
.de PS
.	br
.	RT
.	nf
.	>>
.	in (\\n(.lu-\\$2)/2u
.	ne \\$1
..
.de PE
.	<<
.	in
..
.de TS
.	br
.	>>
..
.de TE
.	<<
.	RT
..
.\" Header and footer macros
.de FT		\" Page footer
.	ev fa.ft
.	FP
'	sp |\\n(.pu+\\n(FPu
.	RT
'	sp
.	FT.pg
'	bp
.	ev
.	if \\n(.t==(\\n(.p+(\\n(FP)) .HD
..
.de HD		\" Page header (called by FT)
.	ev fa.ft
.	RT
'	sp 1
.	HD.pg
.	ev
.	ns
.	keepbop
..
.de FT.pg	\" Footer page number
.	ie \\n[fa.pg]=1 'tl ''\>%\<''
.	el 'sp
..
.de HD.pg	\" Header page number
'	sp
..
.\" Footnotes
.de FS.common
'	br
.	ie \\n[fa.footnum] .ne 1
.	el .ne 1.5
.	if !\\n[fa.footnum] .nr fa.footpos 0\\n(FP+\\n(VSp
.	da fa.footdiv
.	ev fa.footenv
.	RT
.	ps \\n(PS-4
.	vs \\n(PS-2
.	ad l
.	>>
.	nr fa.footnum +1
.	if \\n[fa.footnum]=1 \l'\\n(.lu'
.	ds fa.footsign "\\n[fa.footnum]
.	if \\n(.$>0 .ds fa.footsign "\\$1
.	ad pk
.	in 3n
.	in2 3n
..
.de FS
.	FS.common \\$1
.	ft R
.	ti -3n
\\*[fa.footsign]
.	sp -1
..
.de FS.fa
.	FS.common \\$1
.	<<
.	ft FR
.	ti2 -3n
\>\\*[fa.footsign]\<
.	sp -1
..
.de FE
.	in 0
.	ev
.	di
\s-4\d\>\\*[fa.footsign]\<\u\s+4\c
.	nr fa.footpos -\\n(dn
.	ch FT \\n[fa.footpos]u
..
.de FP
.	if \\n[fa.footnum] \{\
.		ev fa.footenv
'		nf
'		ad l
.		fa.footdiv
.		rm fa.footdiv
.		ev
.	\}
.	nr fa.footnum 0
.	ch FT \\n(FPu
..
.\" Including EPS files (overrides -meps)
.rn EPS __EPS
.de EPS
.	>>
.	__EPS "\\$1" \\$2 \\$3 \\$4 \\$5 \\$6 \\$7 \\$8 \\$9
..
.\" Adjusting fonts
.de fa.gmap	\" Mapping glyphs
.	fmap \\n(.f \\$1
.	if \w'\N'\\$2'' .fmap \\n(.f \\$1 \\$2
..
.de fa.cmap	\" Mapping characters
.	ochar \\n(.f \\$1
.	if !\w'\\$1' .ochar \\n(.f \\$1 \\$2
..
.de fa.umap	\" Mapping characters (unconditionally)
.	ochar \\n(.f \\$1
.	if \w'\\$2' .ochar \\n(.f \\$1 \\$2
..
.de fa.ffont	\" Adjusting old Farsi fonts
.	ft \\$1
.	ff \\$1 +ccmp +rlig +rclt +calt +mset +curs +kern +mark +mkmk
.	fa.cmap ﻫ ھ
.	fa.cmap ﻬ ﮫ
.	fa.cmap ی ﻱ
.	fa.cmap ﯾ ﻳ
.	fa.cmap ﯿ ﻴ
.	fa.cmap ﯽ ﻰ
.	fa.cmap ﯽ ﻲ
.	fa.cmap ﮐ ﻛ
.	fa.cmap ﮑ ﻜ
.	fa.cmap ﮏ ﻚ
.	fa.umap 0 ۰
.	fa.umap 1 ۱
.	fa.umap 2 ۲
.	fa.umap 3 ۳
.	fa.umap 4 ۴
.	fa.umap 5 ۵
.	fa.umap 6 ۶
.	fa.umap 7 ۷
.	fa.umap 8 ۸
.	fa.umap 9 ۹
.	ft P
